<ul class="ember-power-select-options" role="listbox" aria-controls="ember-power-select-trigger-{{select.uniqueId}}" {{did-insert this.addHandlers}} ...attributes>
  {{#vertical-collection
      items=options
      estimateHeight=estimateHeight
      staticHeight=staticHeight
      bufferSize=bufferSize
      lastReached="onScroll"
      containerSelector=".ember-power-select-options"
       as |opt index|}}
       <li class="ember-power-select-option"
         aria-selected="{{ember-power-select-is-selected opt select.selected}}"
         aria-disabled={{if opt.disabled "true"}}
         aria-current="{{eq opt select.highlighted}}"
         data-option-index="{{groupIndex}}{{index}}"
         role="option">
         {{yield opt select}}
       </li>
  {{/vertical-collection}}
</ul>
